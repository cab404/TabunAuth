<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/relativeLayout"
                android:background="@drawable/tabun_auth_bg">
    <ProgressBar style="?android:attr/progressBarStyleLarge" android:layout_width="wrap_content"
                 android:layout_height="wrap_content" android:id="@+id/progress"
                 android:layout_gravity="center_horizontal" android:layout_centerVertical="true"
                 android:layout_centerHorizontal="true" android:background="@drawable/Auth.BG"
                 android:padding="16dp"/>
    <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/icon" android:layout_centerVertical="true" android:layout_centerHorizontal="true"
            android:src="@drawable/ic_launcher"/>
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/log"
			android:textColor="@color/Auth.Font.Color"
			android:textSize="10sp"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true"
			android:layout_margin="4dp"/>
</RelativeLayout>